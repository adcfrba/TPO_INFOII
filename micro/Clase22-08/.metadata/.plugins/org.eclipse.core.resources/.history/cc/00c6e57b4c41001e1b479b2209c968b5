#ifndef TIMERSW_DRIVER_TIMERSW_H_
#define TIMERSW_DRIVER_TIMERSW_H_
#include "Defines.h"

class TIMERSW {
private:
	uint32_t tiempo;
	uint32_t fin;
	uint32_t tiempoRecarga;
	void *func(void);

public:
	TIMERSW();
	virtual ~TIMERSW();

	void start(uint32_t, uint32_t, void*);

	uint32_t getFin() const {
		return fin;
	}

	void setFin(uint32_t fin) {
		this->fin = fin;
	}

	uint32_t getTiempo() const {
		return tiempo;
	}

	void setTiempo(uint32_t tiempo) {
		this->tiempo = tiempo;
	}

	uint32_t getTiempoRecarga() const {
		return tiempoRecarga;
	}

	void setTiempoRecarga(uint32_t tiempoRecarga) {
		this->tiempoRecarga = tiempoRecarga;
	}

	void *getFunc const(void)
	{
		return func;
	}

	void setFunc(void* fun)
	{
		func = fun;
	}

	void descontar(void);
	void accion(void);
};

#endif /* TIMERSW_DRIVER_TIMERSW_H_ */
